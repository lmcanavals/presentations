\ProvidesPackage{beamerthemeupc}

\useoutertheme[height=0pt]{sidebar}

\usepackage{tikz}
\usetikzlibrary{arrows,shapes,trees,positioning,fadings}
\usepackage{amsmath}

\mode<presentation>

  \definecolor{UpcRed}{HTML}{FF1901} % rojo UPC
  \definecolor{DarkGray}{HTML}{3E3E3E} % gris oscuro
  \definecolor{Grey}{HTML}{626262}  % gris medio

  \setbeamercolor{normal text}{bg=white,fg=black}

  \setbeamercolor{title}{fg=UpcRed}
  \setbeamercolor{title in sidebar}{fg=UpcRed}
  \setbeamercolor{navigation symbols}{fg=UpcRed!60,fg=UpcRed!40}

  \setbeamercolor{section in sidebar}{fg=UpcRed}
  \setbeamercolor{section in sidebar shaded}{fg=UpcRed!30}
  \setbeamercolor{subsection in sidebar}{fg=UpcRed}
  \setbeamercolor{subsection in sidebar shaded}{fg=UpcRed!30}
  \setbeamercolor{section in toc}{fg=black}
  \setbeamercolor{section in toc shaded}{fg=black!75}

  \setbeamercolor{frametitle}{fg=UpcRed}
  \setbeamercolor*{bibliography entry title}{fg=black}
  \setbeamercolor*{bibliography entry author}{fg=black}
  \setbeamercolor*{bibliography entry location}{fg=black}
  \setbeamercolor*{bibliography entry note}{fg=black}

  \setbeamercolor{enumerate item}{fg=UpcRed}
  \setbeamercolor{itemize item}{fg=UpcRed}
  \setbeamercolor{itemize subitem}{fg=UpcRed}
  \setbeamercolor{itemize subsubitem}{fg=UpcRed}

  \setbeamercolor{block title}{bg=DarkGray,fg=white}
  \setbeamercolor{block body}{fg=black,bg=Grey!5}
  \setbeamercolor{alerted text}{fg=UpcRed}

  \usetheme{default}
  \usecolortheme[named=UpcRed]{structure}
  \usefonttheme{structurebold}

  \setbeamertemplate{footline}[frame number]
  \setbeamertemplate{section in toc}[sections numbered]
  \setbeamertemplate{subsection in toc}[subsections numbered]
  \setbeamertemplate{blocks}[rounded]

  \setbeamertemplate{sidebar right}{}
  \setbeamertemplate{footline} {
    \hfill\usebeamertemplate*{navigation symbols}
    \hspace{.25cm}\insertframenumber{}/\inserttotalframenumber
  }

  \AtBeginSection[]{
    \begin{frame}[allowframebreaks]{Outline}
      \tableofcontents[currentsection]
    \end{frame}
  }

\mode<all>
